# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/group_travel?connection_limit=20&pool_timeout=20

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_min_32_characters_long_change_in_production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Application
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000

# Email (for invitations - optional for MVP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# File Upload (future)
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Observability
LOG_LEVEL=debug

# Sentry (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
